{
	"name": "nano-spec",
	"version": "1.0.0",
	"description": "A minimal extendable Spec-Driven framework. Not just for code -- for writing, research, and anything you want to get done.",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"specflow": "./bin/specflow.js"
	},
	"scripts": {
		"build": "tsc && xcopy /E /I /Y src\\templates dist\\templates",
		"dev": "tsx src/index.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"commander": "^12.0.0"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"typescript": "^5.5.0",
		"tsx": "^4.0.0",
		"vitest": "^2.0.0",
		"@vitest/coverage-v8": "^2.0.0"
	},
	"engines": {
		"node": ">=18"
	}
}
